<p id="notice"><%= notice %></p>

<h1>Listing Stats</h1>

<table>
  <thead>
    <tr>
      <th>Institution number</th>
      <th>Stats period</th>
      <th>Transaction type</th>
      <th>Card organization</th>
      <th>Capture method</th>
      <th>Iso mcc sum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.INSTITUTION_NUMBER %></td>
        <td><%= stat.STATS_PERIOD %></td>
        <td><%= stat.TRANSACTION_TYPE %></td>
        <td><%= stat.CARD_ORGANIZATION %></td>
        <td><%= stat.CAPTURE_METHOD %></td>
        <td><%= stat.ISO_MCC_SUM %></td>
        <td><%= link_to 'Show', stat %></td>
        <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
        <td><%= link_to 'Destroy', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

